<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>


    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/basicbackcolor</item>
        <!--<item name="android:colorControlHighlight">#ffff8d</item>-->
    </style>


    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="MyFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>


    <style name="basicTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/pink</item>
    </style>

    <style name="MySignUpTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/basicbackcolor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="colorControlNormal">#bec0c0</item>
        <item name="colorControlActivated">#00bcd4</item>
    </style>


    <style name="ProfileTheme" parent="AppTheme.Base">
        <item name="colorPrimary">#00838F</item>
        <item name="colorPrimaryDark">#00838F</item>
        <item name="colorAccent">@color/pink</item>
    </style>

    <style name="Myfabtheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#00838F</item>
        <item name="colorPrimaryDark">#00838F</item>
        <item name="colorAccent">#FFD600</item>
    </style>


    <style name="Mylabel" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">#ff06303a</item>
        <item name="android:textColor">#00bcd4</item>
        <item name="colorAccent">#00bcd4</item>
        <item name="android:colorControlNormal">#bec0c0</item>
        <item name="android:colorControlActivated">#00bcd4</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
